@model IEnumerable<TenMovies.Models.Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in ViewBag.Movies)
{
<div class="movie">
         
        <div class="image"><img class="img" src="@Url.Content(@item.Poster)" alt="Картинка Киндзадза"></div>
    <div class="details">
            <p class="name">@item.Name</p>
            <p><span class="desc">Режисер: </span>@item.Director</p>
            <p><span class="desc">Жанр: </span> @item.Genre</p>
            <p><span class="desc">Год: </span> @item.Year</p>
            <p><span class="desc">Описание: </span>@item.Description</p>
    </div>
</div>
}
